<Window
  x:Class="Interop.WinUI3.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  
  Closed="OnWindowClosed"
  
  mc:Ignorable="d">

  <Grid>
    <Rectangle Name="titleBarRectangle" Height="25" Fill="Transparent"
               HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

    <SwapChainPanel Name="swapchainPanel" Loaded="OnSwapchainPanelLoaded"/>

    <ToggleSwitch OffContent="Stopped" OnContent="Rotating" Toggled="OnSwitchToggled" 
                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
  </Grid>
</Window>